<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/medianPrice"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="hint_success"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/lowestPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/success"
        android:hint="hint_lowest_price"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lowestPrice"
        android:hint="hint_volume"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/medianPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/volume"
        android:hint="hint_median_price"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/medianPrice"
        android:hint="currency"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/medianPrice"
        android:hint="hint_time"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


</androidx.appcompat.widget.LinearLayoutCompat>